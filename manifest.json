{
  "manifest_version": 3,
  "name": "Countdown Timer Extension",
  "version": "1.0",
  "description": "A simple countdown timer extension",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}