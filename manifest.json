{
    "manifest_version": 2,
    "name": "Countdown Timer",
    "version": "1.0",
    "description": "A simple chrome extension that shows a countdown timer in the browser action badge.",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": [
      "activeTab"
    ]
  }
  